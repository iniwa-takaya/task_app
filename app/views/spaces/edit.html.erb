<div class="top-page">
  <div class="side-bar">
    <%= render partial: "shared/side_bar", locals: { spaces: @spaces } %>
  </div>
  <div class="main-page">
    <div class="show-header">
    <div class="show-title"><%= "スペース情報の変更" %></div>
    </div>
    <div class="edit-main">
      <%= form_with model: @space, url:space_path, local: true do |f| %>
        <div>スペース名</div>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="space-form">
          <%= f.text_field :name, class:"space-name", id:"space-name", maxlength:"20" %>
          <%= f.submit "変更" ,class:"space-create-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
